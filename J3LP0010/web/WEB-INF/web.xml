<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>log4j-config-location</param-name>
        <param-value>WEB-INF/log4j.properties</param-value>
    </context-param>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>tunhm.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>tunhm.controller.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>tunhm.controller.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>tunhm.controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>tunhm.controller.SearchController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowArticleDetailController</servlet-name>
        <servlet-class>tunhm.controller.ShowArticleDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateArticleController</servlet-name>
        <servlet-class>tunhm.controller.CreateArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakeCommentController</servlet-name>
        <servlet-class>tunhm.controller.MakeCommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakeEmotionController</servlet-name>
        <servlet-class>tunhm.controller.MakeEmotionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteArticleController</servlet-name>
        <servlet-class>tunhm.controller.DeleteArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCommentController</servlet-name>
        <servlet-class>tunhm.controller.DeleteCommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowNotiController</servlet-name>
        <servlet-class>tunhm.controller.ShowNotiController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowNotiCorrespondingController</servlet-name>
        <servlet-class>tunhm.controller.ShowNotiCorrespondingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResendActivationController</servlet-name>
        <servlet-class>tunhm.controller.ResendActivationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActivateAccountController</servlet-name>
        <servlet-class>tunhm.controller.ActivateAccountController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/RegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/SearchController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowArticleDetailController</servlet-name>
        <url-pattern>/ShowArticleDetailController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateArticleController</servlet-name>
        <url-pattern>/CreateArticleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakeCommentController</servlet-name>
        <url-pattern>/MakeCommentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakeEmotionController</servlet-name>
        <url-pattern>/MakeEmotionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteArticleController</servlet-name>
        <url-pattern>/DeleteArticleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCommentController</servlet-name>
        <url-pattern>/DeleteCommentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowNotiController</servlet-name>
        <url-pattern>/ShowNotiController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowNotiCorrespondingController</servlet-name>
        <url-pattern>/ShowNotiCorrespondingController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResendActivationController</servlet-name>
        <url-pattern>/ResendActivationController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivateAccountController</servlet-name>
        <url-pattern>/ActivateAccountController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>DBCon</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
